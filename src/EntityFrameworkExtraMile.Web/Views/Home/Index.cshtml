@model EntityFrameworkExtraMile.Web.Models.PostsViewModel[]

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Posts</h1>

<ul>
    @foreach (var post in Model)
    {
        <li><a href="@post.Url">@post.Title</a> - by @post.JobTitle @Html.ActionLink(post.AuthorName, "Author", new { id = post.AuthorID })</li>
    }
</ul>
